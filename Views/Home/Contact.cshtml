@{
    ViewBag.Title = "Kontakt";
}
@section scripts
{
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
}
<div class="main">
    <div class="container">
        <div class="row">
            <div class="col-md-12 hidden-lg">
                <div class="padd">
                    <div class="navis"></div>
                </div>
            </div>
            <div class="visible-lg">
            </div>
            <div class="col-md-12">
                <div class="whity content">
                    <!-- Main Content Starts Here -->
                    <!-- Content should be encloased inside div with the class "posts" -->
                    <div class="posts">
                        <!-- Each entry should be enclosed inside div with the class "entry" -->
                        <div class="entry">
                            <div class="padd">
                                <!-- Contact Page title -->
                                <h2>Formularz kontaktowy</h2>
                                <!-- Contact Page Para -->
                                <p>Jeżeli zainteresował Cię produkt, masz dodatkowe pytania, chciałbyś uzyskać więcej informacji czy umówić się na spotkanie skorzystaj z poniższego formularza kontaktowego.</p>
                            </div>

                            <div class="row">
                                <div class="col-md-7 col-md-offset-1">
                                    <div class="padd">
                                        <div class="co-form">
                                            <form class="form-horizontal" method="post">
                                                <fieldset>
                                                    <div class="form-group">
                                                        <label class="control-label col-md-3" for="name">Imię i Nazwisko</label>
                                                        <div class="col-md-9">
                                                            <input type="text" class="form-control" id="name" name="name" data-val="true" data-val-required="*">
                                                            <span class="field-validation-valid" data-valmsg-for="name" data-valmsg-replace="true"></span>
                                                        </div>
                                                    </div>
                                                    <div class="form-group">
                                                        <label class="control-label col-md-3" for="email">Adres e-mail</label>
                                                        <div class="col-md-9">
                                                            <input type="text" class="form-control" id="email" name="email" data-val="true" data-val-required="*" data-val-email="niepoprawny adres e-mail">
                                                            <span class="field-validation-valid" data-valmsg-for="email" data-valmsg-replace="true"></span>
                                                        </div>
                                                    </div>
                                                    <div class="form-group">
                                                        <label class="control-label col-md-3" for="comment">Wiadomość</label>
                                                        <div class="col-md-9">
                                                            <textarea class="form-control" id="comment" rows="3" name="comment" data-val="true" data-val-required="*"></textarea>
                                                            <span class="field-validation-valid" data-valmsg-for="comment" data-valmsg-replace="true"></span>
                                                        </div>
                                                    </div>
                                                    <div class="form-group">
                                                        <div class="col-md-offset-3 col-md-9">
                                                            <button type="submit" class="btn btn-default">Wyślij</button>
                                                            @if (ViewBag.MailSent != null && ViewBag.MailSent)
                                                            {
                                                                <div>Wiadomość została wysłana !</div>
                                                            }
                                                        </div>
                                                    </div>
                                                </fieldset>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    @Html.Partial("_CompanyContactPartial")
                                </div>
                                <div class="col-md-offset-1"></div>
                            </div>
                            <div class="gmap">
                                <div class="padd">
                                    <!-- Goto Google maps and copy the embed code of your location. Replace the below embed code with your code. -->
                                    <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d628879.2610361731!2d20.775846718120675!3d51.996679924274474!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x47193bd90009f093%3A0x8f4b76f7c09e44a1!2sPiaskowa+1!5e0!3m2!1spl!2s!4v1395420796586" width="800" height="300" frameborder="0" style="border:0"></iframe>

                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- Main Content Ends Here -->
                </div>

            </div>

            <div class="mobily hidden-lg">
            </div>
        </div>
    </div>
</div>
